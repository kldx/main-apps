<% content_for :title do %>
  KLDX Team | Article Section
<% end %>

<% content_for :meta_tags do %>
  <%= render :partial => 'application/meta_tags',
             :locals => {
               :type => "website",
               :title => "KLDX Team | Article Section",
               :url => request.url,
               :description => "Kuala Lumpur DX Team Group Activists are moving on Amateur Radio activity especially contesting, IOTS, Field Day, and also Emergency Communication",
               :canonical => request.url,
               :og_title => "KLDX Team | Article Section",
               :og_description => "Kuala Lumpur DX Team Group Activists are moving on Amateur Radio activity especially contesting, IOTS, Field Day, and also Emergency Communication"
            } %>
<% end %>

<section role="main" class="content-body">
	<header class="page-header">
		<h2>Article Section</h2>

		<div class="right-wrapper pull-right">
			<ol class="breadcrumbs">
				<li>
          <%= link_to dashboard_path, data: { turbolinks: disable_turbolink } do %>
            <i class="fa fa-home"></i>
          <% end %>
				</li>
				<li><span>Article Section</span></li>
			</ol>

			<a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
		</div>
	</header>

	<!-- start: page -->
	<div class="row">
    <div class="col-md-6">
      <section class="panel">
				<div class="panel-body bg-primary">
					<div class="widget-summary widget-summary-md">
						<div class="widget-summary-col widget-summary-col-icon">
							<div class="summary-icon bg-primary">
								<i class="fa fa-newspaper-o"></i>
							</div>
						</div>
						<div class="widget-summary-col">
							<div class="summary">
								<h4 class="title">Total Article</h4>
								<div class="info">
									<strong class="amount"><%= @articles.count %></strong>
									<span class="text-primary">(14 unread)</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
    <div class="col-md-6">
      <section class="panel panel-featured-left panel-featured-primary">
				<div class="panel-body">
					<div class="widget-summary widget-summary-md">
						<div class="widget-summary-col widget-summary-col-icon">
							<div class="summary-icon bg-primary">
								<i class="fa fa-life-ring"></i>
							</div>
						</div>
						<div class="widget-summary-col">
							<div class="summary">
								<h4 class="title">Support Questions</h4>
								<div class="info">
									<strong class="amount">1281</strong>
									<span class="text-primary">(14 unread)</span>
								</div>
							</div>
							<div class="summary-footer">
								<a class="text-muted text-uppercase">(view all)</a>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
	</div>

  <p class="mb-lg">
    <%= link_to new_admin_article_path, class: "btn btn-xs btn-default", data: { turbolinks: false } do %>
      <i class="fa fa-plus-circle"></i> Submit new article
    <% end %>
  </p>

  <div class="row">
    <div class="col-lg-12">
      <section class="panel panel-featured-left panel-featured-primary">
        <header class="panel-heading">
          <h2 class="panel-title">List of articles</h2>
        </header>
        <div class="panel-body">
          <table class="table table-bordered table-striped mb-none" id="datatable-kldx">
            <thead>
              <tr>
                <th class="col-md-1">No</th>
                <th class="col-md-6">Title</th>
                <th class="col-md-1">Status</th>
                <th class="col-md-2">Submitted Date</th>
                <th class="col-md-1">Creator</th>
                <th class="col-md-1">Action</th>
              </tr>
            </thead>
            <tbody>
              <%= render :partial => "article", :collection => @articles %>
            </tbody>
          </table>
        </div>
      </section>
    </div>
  </div>
	<!-- end: page -->
</section>
