<% content_for :title do %>
  KLDX Team | Store Dashboard
<% end %>

<% content_for :meta_tags do %>
  <%= render :partial => 'application/meta_tags',
             :locals => {
               :type => "website",
               :title => "KLDX Team | Store Dashboard",
               :url => request.url,
               :description => "Kuala Lumpur DX Team Group Activists are moving on Amateur Radio activity especially contesting, IOTS, Field Day, and also Emergency Communication",
               :canonical => request.url,
               :og_title => "KLDX Team | Store Dashboard",
               :og_description => "Kuala Lumpur DX Team Group Activists are moving on Amateur Radio activity especially contesting, IOTS, Field Day, and also Emergency Communication"
            } %>
<% end %>

<section role="main" class="content-body">
	<header class="page-header">
		<h2>Store Dashboard</h2>

		<div class="right-wrapper pull-right">
			<ol class="breadcrumbs">
				<li>
          <%= link_to dashboard_path, data: { turbolinks: disable_turbolink } do %>
            <i class="fa fa-home"></i>
          <% end %>
				</li>
				<li><span>Store Dashboard</span></li>
			</ol>

			<a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
		</div>
	</header>

	<!-- start: page -->
	<div class="row">
    <div class="row">
      <div class="col-md-6">
        <section class="panel panel-featured-left panel-featured-secondary">
  				<div class="panel-body">
  					<div class="widget-summary">
  						<div class="widget-summary-col widget-summary-col-icon">
  							<div class="summary-icon bg-secondary">
  								<i class="fa fa-shopping-cart"></i>
  							</div>
  						</div>
  						<div class="widget-summary-col">
  							<div class="summary">
  								<h4 class="title">Shop Centre</h4>
  								<div class="info">
  									<strong class="amount">Total Collections: <%= @store_shop_collection.count %></strong>
  									<span class="text-primary">(<%= @store_shop_product.count %> products)</span>
  								</div>
  							</div>
  							<div class="summary-footer">
                  <%= link_to "(view all)", admin_store_shop_collections_path, class: 'text-muted', data: { turbolinks: disable_turbolink } %>
  							</div>
  						</div>
  					</div>
  				</div>
  			</section>
  		</div>
      <div class="col-md-6">
        <section class="panel panel-featured-left panel-featured-primary">
  				<div class="panel-body">
  					<div class="widget-summary">
  						<div class="widget-summary-col widget-summary-col-icon">
  							<div class="summary-icon bg-primary">
  								<i class="fa fa-gift"></i>
  							</div>
  						</div>
  						<div class="widget-summary-col">
  							<div class="summary">
  								<h4 class="title">Merchandise Centre</h4>
  								<div class="info">
  									<strong class="amount">Total Collections: <%= @store_merchandise_collection.count %></strong>
  									<span class="text-primary">(<%= @store_merchandise_product.count %> products)</span>
  								</div>
  							</div>
  							<div class="summary-footer">
                  <%= link_to "(view all)", admin_store_merchandise_collections_path, class: 'text-muted', data: { turbolinks: disable_turbolink } %>
  							</div>
  						</div>
  					</div>
  				</div>
  			</section>
  		</div>
  	</div>
	</div>
	<!-- end: page -->
</section>
