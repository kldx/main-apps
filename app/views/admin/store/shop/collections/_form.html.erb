<% if @store_shop_collection.errors.any? %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong><%= pluralize(@store_shop_collection.errors.count, "error") %> prohibited this user from being saved:</strong>
  <ul>
    <% @store_shop_collection.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :title, "Title", class: "col-md-2 control-label" %>
	<div class="col-md-10">
    <%= f.text_field :title, :class => "form-control" %>
		<span class="help-block">Title shouldn't be more than 250 words.</span>
	</div>
</div>

<div class="form-group">
  <label class="col-md-2 control-label"></label>
  <div class="col-md-10">
    <%= f.button "Submit", :class => "btn btn-primary", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Submitting..." } %>
    <%= link_to 'Cancel', admin_store_shop_collections_path, :class => "btn btn-link" %>
  </div>
</div>
