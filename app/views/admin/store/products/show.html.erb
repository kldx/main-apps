<% content_for :title do %>
  KLDX Team | Edit <%= @store_product.name %> for <%= @store_shop_collection.title %> Collection
<% end %>

<% content_for :meta_tags do %>
  <%= render :partial => 'application/meta_tags',
             :locals => {
               :type => "website",
               :title => "KLDX Team | Edit #{@store_product.name} for #{@store_shop_collection.title} Collection",
               :url => request.url,
               :description => "Kuala Lumpur DX Team Group Activists are moving on Amateur Radio activity especially contesting, IOTS, Field Day, and also Emergency Communication",
               :canonical => request.url,
               :og_title => "KLDX Team | Edit #{@store_product.name} for #{@store_shop_collection.title} Collection",
               :og_description => "Kuala Lumpur DX Team Group Activists are moving on Amateur Radio activity especially contesting, IOTS, Field Day, and also Emergency Communication"
            } %>
<% end %>

<section role="main" class="content-body">
	<header class="page-header">
		<h2><%= @store_product.name %> for <%= @store_shop_collection.title %> Collection</h2>

		<div class="right-wrapper pull-right">
			<ol class="breadcrumbs">
				<li>
          <%= link_to dashboard_path, data: { turbolinks: disable_turbolink } do %>
            <i class="fa fa-home"></i>
          <% end %>
				</li>
				<li><span><%= @store_product.name %> for <%= @store_shop_collection.title %> Collection</span></li>
			</ol>

			<a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
		</div>
	</header>

	<!-- start: page -->
	<div class="row">
    <div class="col-md-12">
      <section class="panel panel-featured-left panel-featured-primary">
				<header class="panel-heading">
					<h2 class="panel-title"><%= @store_product.name %> for <%= @store_shop_collection.title %> Collection</h2>
				</header>
        <div class="panel-body">
          <div class="form-horizontal form-bordered">
            <div class="form-group">
              <label class="col-md-2 control-label">Default Image</label>
              <div class="col-md-10">
                <% if @store_product.try(:default_picture?) %>
                  <%= image_tag(@store_product.default_picture_url(:low_res), class: "img-responsive") %>
                <% else %>
                  <%= image_tag('article_default_image_high_res.png', class: "img-responsive") %>
                <% end %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-2 control-label">Product Name</label>
            	<div class="col-md-10">
                <input type="text" value="<%= @store_product.name %>" class="form-control" disabled>
            	</div>
            </div>
            <div class="form-group">
              <label class="col-md-2 control-label">Product Details</label>
            	<div class="col-md-10">
                <textarea class="form-control" disabled><%= strip_tags(@store_product.details) %></textarea>
            	</div>
            </div>
            <div class="form-group">
              <label class="col-md-2 control-label">Price</label>
            	<div class="col-md-10">
                <input type="text" value="<%= number_to_currency(@store_product.price) %>" class="form-control" disabled>
            	</div>
            </div>
            <div class="form-group">
              <label class="col-md-2 control-label">Status</label>
            	<div class="col-md-10">
                <input type="text" value="<%= @store_product.status %>" class="form-control" disabled>
            	</div>
            </div>
            <div class="form-group">
              <label class="col-md-2 control-label">Availability</label>
            	<div class="col-md-10">
                <input type="text" value="<%= @store_product.availability %>" class="form-control" disabled>
            	</div>
            </div>
            <div class="form-group">
              <label class="col-md-2 control-label">Quantity</label>
            	<div class="col-md-10">
                <input type="text" value="<%= @store_product.quantity %>" class="form-control" disabled>
            	</div>
            </div>
            <div class="form-group">
              <label class="col-md-2 control-label">Product Type</label>
            	<div class="col-md-10">
                <input type="text" value="<%= @store_product.product_type %>" class="form-control" disabled>
            	</div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <%= link_to "Back", admin_store_shop_collection_path(@store_shop_collection), class: "btn btn-default" %>
        </div>
			</section>
    </div>
  </div>
	<!-- end: page -->
</section>
