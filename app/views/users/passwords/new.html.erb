<section id="login-form">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <p class="text-center"><%= image_tag "kldx-circle.png", width: 70, style: "margin-top: 10px;margin-bottom: -20px;" %></p>
        <div class="form-box">
          <div class="page-header">
            <h2 class="text-center">Forgot Password</h2>
            <hr>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.label :callsign %><br />
                <%= f.text_field :callsign, class: "form-control input-lg", autofocus: true, placeholder: "Enter your callsign" %>
              </div>

              <div class="form-group">
                <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg btn-block" %>
              </div>
            <% end %>
          </div>
          <p class="text-center">Already have an account? <%= link_to "Login here", login_path %></p>
          <p class="text-center">Don't have an account? <%= link_to "Register", register_path %> now!</p>
          <p class="text-center">Didn't receive confirmation instructions? <%= link_to "Click here", new_user_confirmation_path %></p>
          <p class="text-center"><%= link_to "Back to homepage", root_path, class: "btn btn-link btn-xs" %></p>
        </div>
      </div>
    </div>
  </div>
</section>
