<section id="register-form">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <p class="text-center"><%= image_tag "kldx-circle.png", width: 70, style: "margin-top: 10px;margin-bottom: -20px;" %></p>
        <div class="form-box">
          <div class="page-header">
            <h2 class="text-center">Create New Account</h2>
            <hr>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.label :callsign, "Your Callsign" %><br />
                <%= f.text_field :callsign, class: "form-control input-lg", autofocus: true, placeholder: "Callsign" %>
              </div>

              <div class="form-group">
                <%= f.label :email, "Email Address" %><br />
                <%= f.email_field :email, class: "form-control input-lg", autofocus: true, placeholder: "Email Address" %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, class: "form-control input-lg", autocomplete: "off", placeholder: "Password" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, class: "form-control input-lg", autocomplete: "off", placeholder: "Confirmation Password" %>
              </div>

              <div class="form-group">
                <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
              </div>
            <% end %>
          </div>
          <p class="text-center">Already have an account? <%= link_to "Login here", login_path %></p>
          <p class="text-center"><%= link_to "Back to homepage", root_path, class: "btn btn-link btn-xs" %></p>
        </div>
      </div>
    </div>
  </div>
</section>
